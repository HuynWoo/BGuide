<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bLocation"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="#6fe8e8"
        android:padding="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/region_uniqueID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
        <TextView android:id="@+id/region_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="10dp" />
        <TextView android:id="@+id/region_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="10dp" />
        <TextView android:id="@+id/region_beacon_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="10dp" />

    </LinearLayout>

</LinearLayout>